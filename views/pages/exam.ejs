<!DOCTYPE html>
<html lang="fr" class="theme-classic">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Exam | QPC</title>
	<link rel="stylesheet" href="/css/pages/exam.css">
	<link rel="icon" href="/img/favicon.ico">
</head>
<body>
	<header>
		<%- include("../partials/navbar") %>
	</header>
	<main>
		<section id="message-overlay">
			<div class="message-panel">
				<!-- GENERATED BY JS -->
			</div>
		</section>
		
		<section class="overlay">
			<div class="overlay-bg"></div>

			<!-- INSERT CHAPTER OVERLAY -->
			<div class="insert-overlay chapter-overlay overlay-box">
				<div class="container-header">
					<h1>Ajouter un chapitre</h1>
					<button class="overlay-closer"></button>
				</div>
				<form>
					<div class="container-body">
						<div class="form-row">
							<div class="input-box" title="La position du chapitre définit l'ordre d'apparition du chapitre au cours d'un examen">
								<label for="position-number">Position</label>
								<input class="position-number" name="position-number" type="number" min="1" value="1">
							</div>
							<div class="input-box" title="Le titre du chapitre, généralement un mot voire une courte phrase, permet d'aiguiller les participants sur le type de questions auxquelles ils seront confrontés">
								<label for="title">Titre</label>
								<input class="title" name="title" type="text">
							</div>
						</div>

						<div class="form-row">
							<div class="input-box" title="La descri^ption du chapitre, optionelle, permet d'affiner la precision du theme des questions se trouvant au sein de ce dernier">
								<label for="description">Description</label>
								<textarea class="description" name="description"></textarea>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<input type="submit" value="Ajouter">
							</div>
						</div>
					</div>
				</form>
			</div>

			<!-- DETAILS CHAPTER OVERLAY -->
			<div class="details-overlay chapter-overlay overlay-box">
				<div class="container-header">
					<h1>Infos examen</h1>
					<button class="overlay-closer"></button>
				</div>
				<div class="container-body">
					<!-- GENERATED BY JS -->
				</div>
			</div>

			<!-- EDIT CHAPTER OVERLAY -->
			<div class="edit-overlay chapter-overlay overlay-box">
				<div class="container-header">
					<h1>Modifier un chapitre</h1>
					<button class="overlay-closer"></button>
				</div>
				<form>
					<div class="container-body">
						<div class="form-row">
							<div class="input-box">
								<label for="position-number">Position</label>
								<input class="position-number" name="position-number" type="number" min="1">
							</div>
							<div class="input-box">
								<label for="title">Titre</label>
								<input class="title" name="title" type="text">
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<label for="description">Description</label>
								<textarea class="description" name="description"></textarea>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<input type="submit" value="Modifier">
							</div>
						</div>
					</div>
				</form>
			</div>

			<!-- DELETE CHAPTER OVERLAY -->
			<div class="delete-overlay chapter-overlay overlay-box">
				<div class="container-header">
					<h1>Supprimer un chapitre</h1>
					<button class="overlay-closer"></button>
				</div>
				<div class="container-body">
					<div class="form-row">
						<p class="delete-query"></p>
					</div>
					
					<div class="form-row delete-btn-box">
						<div class="input-box">
							<input class="cancel-delete-btn overlay-closer" type="submit" value="Annuler">
						</div>
						<div class="input-box">
							<input class="delete-btn" type="submit" value="Supprimer">
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="exam-container">
			<!-- GENERATED BY JS -->
		</section>
    </main>
	<script type="module" src="/js/exam.js"></script>
</body>
</html>