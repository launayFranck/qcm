<!DOCTYPE html>
<html lang="fr" class="theme-classic">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Exam | QPC</title>
	<link rel="stylesheet" href="/css/pages/exam.css">
	<link rel="icon" href="/img/favicon.ico">
</head>
<body>
	<header>
		<%- include("../partials/navbar") %>
	</header>
	<main>
		<section id="message-overlay">
			<div class="message-panel">
				<!-- GENERATED BY JS -->
			</div>
		</section>
		
		<section class="overlay">
			<div class="overlay-bg"></div>

			<!-- INSERT EXAMINATION -->
			<div class="insert-overlay overlay-box">
				<div class="container-header">
					<h1>Ajouter un examen</h1>
					<button class="overlay-closer"></button>
				</div>
				<form>
					<div class="container-body">
						<div class="form-row">
							<div class="input-box">
								<label for="title">Titre</label>
								<input class="title" name="title" type="text">
							</div>
							<div class="input-box">
								<label>Thème</label>
								<select class="theme" name="theme-id">
									<option value="" selected>-- Sélectionner un thème</option>
									<!-- GENERATED BY JS -->
								</select>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<label for="description">Description</label>
								<textarea class="description" name="description"></textarea>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<label for="duration">Durée</label>
								<input class="duration" name="duration" type="time" value="02:00">
							</div>
						</div>

						<div class="form-row">
							<div class="checkbox-box">
								<label for="always-available">Toujours disponible</label>
								<input class="always-available" name="always-available" type="checkbox">
							</div>
						</div>

                        <div class="form-row availability">
							<div class="input-box">
								<label for="starts-at">Début</label>
								<input class="starts-at" name="starts-at" type="datetime-local">
							</div>
							<div class="input-box">
								<label for="ends-at">Fin</label>
								<input class="ends-at" name="ends-at" type="datetime-local">
							</div>
						</div>

                        <div class="form-row">
							<div class="input-box">
								<label for="required-score">Score minimal requis</label>
								<input class="required-score" name="required-score" type="number" min="1">
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<input type="submit" value="Ajouter">
							</div>
						</div>
					</div>
				</form>
			</div>

			<!-- DETAILS OVERLAY -->
			<div class="details-overlay overlay-box">
				<div class="container-header">
					<h1>Infos examinations</h1>
					<button class="overlay-closer"></button>
				</div>
				<div class="container-body">
					<!-- GENERATED BY JS -->
				</div>
			</div>

			<!-- EDIT OVERLAY -->
			<div class="edit-overlay overlay-box">
				<div class="container-header">
					<h1>Modifier un examen</h1>
					<button class="overlay-closer"></button>
				</div>
				<form>
					<div class="container-body">
						<div class="form-row">
							<div class="input-box">
								<label for="title">Titre</label>
								<input class="title" name="title" type="text">
							</div>
							<div class="input-box">
								<label>Thème</label>
								<select class="theme-id" name="theme-id">
									<option value="" selected>-- Sélectionner un thème</option>
									<!-- GENERATED BY JS -->
								</select>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<label for="description">Description</label>
								<textarea class="description" name="description"></textarea>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<label for="duration">Durée</label>
								<input class="duration" name="duration" type="time" value="02:00">
							</div>
						</div>

						<div class="form-row">
							<div class="checkbox-box">
								<label for="always-available">Toujours disponible</label>
								<input class="always-available" name="always-available" type="checkbox">
							</div>
						</div>

                        <div class="form-row availability">
							<div class="input-box">
								<label for="starts-at">Début</label>
								<input class="starts-at" name="starts-at" type="datetime-local">
							</div>
							<div class="input-box">
								<label for="ends-at">Fin</label>
								<input class="ends-at" name="ends-at" type="datetime-local">
							</div>
						</div>

                        <div class="form-row">
							<div class="input-box">
								<label for="required-score">Score minimal requis</label>
								<input class="required-score" name="required-score" type="number" min="1">
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<input type="submit" value="Modifier">
							</div>
						</div>
					</div>
				</form>
			</div>

			<!-- DELETE OVERLAY -->
			<div class="delete-overlay overlay-box">
				<div class="container-header">
					<h1>Supprimer un examen</h1>
					<button class="overlay-closer"></button>
				</div>
				<div class="container-body">
					<div class="form-row">
						<p class="delete-query"></p>
					</div>
					
					<div class="form-row delete-btn-box">
						<div class="input-box">
							<input class="cancel-delete-btn overlay-closer" type="submit" value="Annuler">
						</div>
						<div class="input-box">
							<input class="delete-btn" type="submit" value="Supprimer">
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="exam-container">
			<!-- GENERATED BY JS -->
		</section>
    </main>
	<script type="module" src="/js/exam.js"></script>
</body>
</html>