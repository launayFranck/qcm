<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Thèmes | QPC</title>
	<link rel="stylesheet" href="css/pages/themes.css">
</head>
<body>
	<header>
		<%- include("../partials/navbar") %>
	</header>
	<main>
		<section id="message-overlay">
			<div class="message-panel">
			</div>
		</section>

		<section class="overlay">
			<div class="overlay-bg"></div>

			<!-- INSERT THEME -->
			<div class="insert-theme overlay-box">
				<div class="container-header">
					<h1>Ajouter un thème</h1>
					<button class="overlay-closer"></button>
				</div>
				<form>
					<div class="container-body">
						<div class="form-row">
							<div class="input-box">
								<label for="title">Nom du thème</label>
								<input class="title" name="title" type="text" required>
							</div>
						</div>
						<div class="form-row">
							<div class="input-box">
								<label for="description">Description</label>
								<textarea class="description" name="description"></textarea>
							</div>
						</div>
						<div class="form-row">
							<div class="input-box charged-list">
								<label>Utilisateur(s) en charge</label>
								<div class="add-charged">+</div>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<input type="submit" value="Ajouter">
							</div>
						</div>
					</div>
				</form>
			</div>

			<!-- DETAILS OVERLAY -->
			<div class="details-theme overlay-box">
				<div class="themes-infos">
					<div class="container-header">
						<h1>Infos thèmes</h1>
						<button class="overlay-closer"></button>
					</div>
					<div class="info-container">
						<div class="infos-row">
							<p>Nombre de thèmes</p>
							<hr>
							<span class="themes-number">0</span>
						</div>
					</div>
				</div>
			</div>

			<!-- EDIT OVERLAY -->
			<div class="edit-theme overlay-box">
				<div class="container-header">
					<h1>Modifier un thème</h1>
					<button class="overlay-closer"></button>
				</div>
				<form>
					<div class="container-body">
						<div class="form-row">
							<div class="input-box">
								<label for="title">Nom du thème</label>
								<input class="title" name="title" type="text" required>
							</div>
						</div>
						<div class="form-row">
							<div class="input-box">
								<label for="description">Description</label>
								<textarea class="description" name="description"></textarea>
							</div>
						</div>
						<div class="form-row">
							<div class="input-box charged-list">
								<label>Utilisateur(s) en charge</label>
								<div class="add-charged">+</div>
							</div>
						</div>

						<div class="form-row">
							<div class="input-box">
								<input type="submit" value="Modifier">
							</div>
						</div>
					</div>
				</form>
			</div>

			<!-- DELETE OVERLAY -->
			<div class="delete-theme overlay-box">
				<div class="container-header">
					<h1>Supprimer un thème</h1>
					<button class="overlay-closer"></button>
				</div>
				<div>
					<div class="container-body">
						<div class="form-row">
							<p class="delete-query"></p>
						</div>
						
						<div class="form-row delete-btn-box">
							<div class="input-box">
								<input class="cancel-delete-btn overlay-closer" type="submit" value="Annuler">
							</div>
							<div class="input-box">
								<input class="delete-btn" type="submit" value="Supprimer">
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="themes-section">
			<div class="themes-panel">
				<button id="details-theme-btn"></button>
				<button id="insert-theme-btn"><img src="/img/plus.svg" alt="+">Ajouter</button>
			</div>
			<div class="line-row">
				<div class="filter-params">
					<div class="search-box">
						<input type="search" class="search" name="search" placeholder="Rechercher...">
						<img src="/img/search.svg" alt="">
					</div>
					<select class="order-select order-property" name="property">
						<option value="created_at" selected>Date de création</option>
						<option value="updated_at">Date de modification</option>
						<option value="title">Nom de thème</option>
					</select>
					<select class="order-select order-ascending" name="ascending">
						<option value="true">Croissant</option>
						<option value="false" selected>Décroissant</option>
					</select>
				</div>
			</div>

			<section id="themes-container">
				<!-- GENERATED BY JS -->
			</section>
		</section>
    </main>
	<footer></footer>
	<script type="module" src="js/themes.js"></script>
</body>
</html>