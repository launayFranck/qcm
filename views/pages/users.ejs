<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Utilisateurs | QPC</title>
	<link rel="stylesheet" href="css/pages/user.css">
</head>
<body>
	<header>
		<%- include("../partials/navbar") %>
	</header>
	<main>
		<section id="users-section">
			<div class="users-panel">
				<form>
					<div class="title-box">
						<h1>Ajouter un utilisateur</h1>
					</div>
					<div class="form-row">
						<div class="input-box">
							<label for="username">Nom d'utilisateur</label>
							<input name="username" type="text">
						</div>
						<div class="input-box">
							<label for="role">Role</label>
							<select name="role">
								<option value="1">Admin</option>
								<option value="2">Gestionnaire</option>
								<option value="3">Formateur</option>
								<option value="4" selected>Stagiaire</option>
							</select>
						</div>
					</div>
					
					<div class="form-row">
						<div class="input-box">
							<label for="firstname">Prénom</label>
							<input name="firstname" type="text">
						</div>
						<div class="input-box">
							<label for="lastname">Nom de famille</label>
							<input name="lastname" type="text">
						</div>
					</div>
					
					<div class="form-row">
						<div class="input-box">
							<label for="email">Email</label>
							<input name="email" type="email">
						</div>
						<div class="input-box">
							<label for="phone">Téléphone</label>
							<input name="phone" type="tel">
						</div>
						<div class="input-box">
							<label for="password">Mot de passe</label>
							<input name="password" type="password">
						</div>
					</div>
					
					<div class="form-row">
						<div class="input-box">
							<input type="submit" value="Ajouter">
						</div>
					</div>
				</form>
				<div class="users-infos">
					<div class="title-box">
						<h1>Infos utilisateurs</h1>
					</div>
					<div class="users-infos-row">
						<div>
							<p>Nombre d'utilisateurs: <span class="users-number">0</span></p>
							<p>Nombre d'administrateurs: <span class="admins-number">0</span></p>
							<p>Nombre de gestionnaires: <span class="managers-number">0</span></p>
							<p>Nombre de formateurs: <span class="formers-number">0</span></p>
							<p>Nombre de stagiaires: <span class="interns-number">0</span></p>
						</div>
					</div>
				</div>
			</div>
			<div class="line-row">
				<ul class="quick-nav">
					<li><a href="#admin"><img src="img/anchor.svg">Administrateurs</a></li>
					<li><a href="#manager"><img src="img/anchor.svg">Gestionnaires</a></li>
					<li><a href="#former"><img src="img/anchor.svg">Formateurs</a></li>
					<li><a href="#intern"><img src="img/anchor.svg">Stagiaires</a></li>
				</ul>
				<select class="order-select" name="property">
					<option value="created_at" selected>Date de création</option>
					<option value="username">Nom d'utilisateur</option>
					<option value="email">Email</option>
				</select>
				<select class="order-select" name="ascending">
					<option value="true">Croissant</option>
					<option value="false" selected>Décroissant</option>
				</select>
			</div>
			<section id="users-container">
				<!-- GENERATED BY JS -->
			</section>
		</section>
    </main>
	<footer></footer>
	<script type="module" src="js/users.js"></script>
</body>
</html>